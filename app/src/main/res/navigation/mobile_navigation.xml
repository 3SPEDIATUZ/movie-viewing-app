<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.movieviewingapp.ui.fragment.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />


    <fragment
        android:id="@+id/nav_popular"
        android:name="com.example.movieviewingapp.ui.fragment.popular.PopularFragment"
        android:label="Movie Popular"
        tools:layout="@layout/fragment_popular" />
    <fragment
        android:id="@+id/nav_upcoming"
        android:name="com.example.movieviewingapp.ui.fragment.upcoming.UpcomingFragment"
        android:label="Movie Upcoming"
        tools:layout="@layout/fragment_upcoming" />

    <fragment
        android:id="@+id/nav_topRated"
        android:name="com.example.movieviewingapp.ui.fragment.topRated.TopRatedFragment"
        android:label="Movie Top Rated"
        tools:layout="@layout/fragment_top_rated" />
    <fragment
        android:id="@+id/nav_nowPlaying"
        android:name="com.example.movieviewingapp.ui.fragment.nowPlaying.NowPlayingFragment"
        android:label="Movie Now Playing"
        tools:layout="@layout/fragment_now_playing" />
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.movieviewingapp.ui.fragment.movieDetail.MovieDetailFragment"
        android:label="Movie Detail"
        tools:layout="@layout/fragment_movie_detail" />
</navigation>